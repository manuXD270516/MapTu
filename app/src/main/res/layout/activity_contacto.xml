<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.maptu.Contacto.Contacto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.12"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="CONTACTANOS"
                android:textAlignment="center"
                android:textColor="@color/colorNegro"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/img_email" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.10"
                android:text="DE :"
                android:textColor="@color/colorNegro"
                android:textSize="16dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtDe"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Ingresa tu correco electronico"
                android:inputType="textPersonName"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.10"
                android:text="PARA : "
                android:textColor="@color/colorNegro"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtPara"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:enabled="false"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:text="Appcomunicaciones7@gmail.com"
                android:inputType="textPersonName"
                android:textSize="15dp"
                android:textStyle="italic" />



            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.01"
                android:text="ASUNTO : "
                android:textColor="@color/colorNegro"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/txtAsunto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Ingrese el asunto de tu correo"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.01"
                android:text="MENSAJE : "
                android:textColor="@color/colorNegro"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/txtMensaje"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Escriba su mensaje...."
                android:textSize="15dp"
                android:textStyle="italic"
                android:inputType="textMultiLine|text"/>



            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_circular"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="10dp"
                android:text="ENVIAR EMAIL"
                android:textColor="@color/colorBlanco"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
